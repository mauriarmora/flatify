<%= render '/shared/navbar' %>


  <div class="container">
    <h2 class="login-title">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs login-form">
        <%= f.input :email,
                    placeholder: 'email',
                    required: false,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email", class: 'input' }, label_html: { class: 'label' } %>
        <%= f.input :password,
                    required: false,
                    placeholder: 'password',
                    label: false,
                    input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Log in", class:'primarybtn width-btns-devise mb-4' %>
        <!--- SIGN UP & FORGOT PASSWORD? -->
        <p class="mb-0">You don't have an account yet?</p><strong><%= render "devise/shared/links"%></strong>
      </div>
    <% end %>
    <div class="image-login text-center">
      <%= image_tag "flat", alt: "alttext", width: 350 %>
    </div>
  </div> <!---CONTAINER--->
