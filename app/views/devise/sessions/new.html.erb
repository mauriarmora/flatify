<%= render '/shared/navbar' %>

<div class="container">
  <h2 class="value-proposition">Share <br> fair</h2>

  <%= image_tag "pizza_sharing.png", alt: "alttext", class: 'illustration' %>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'input' }, label_html: { class: 'label' } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Log in", class:'primarybtn width-btns-devise' %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
