<%= render 'shared/navbar' %>

<div class="container">

  <h1 id="homepage-title"><%= @flat.name %></h1>

  <div class="balance-card">
    <div class="user-balance">
      <div class="user-image">
        <img class="medium-avatar" src="<%= current_user.photo_url  %>">
      </div>
      <h1>€200</h1>
    </div>

    <div class="others-balance">
      <div class="flatmates-container">
        <% @flat.users.each do |user| %>
          <%= image_tag user.photo_url, class:'small-avatar' %>
          <%= image_tag user.photo_url, class:'small-avatar' %>
        <% end %>
      </div>
       <h3><span>Total: </span>€1.200</h3>
    </div>
  </div>

  <h2 class="mt-3">Expenses</h2>

  <div class="expenses">
    <% @expenses.each do |expense| %>
      <div class="card-expense">
        <%= image_tag expense.creator.photo_url, class: 'small-avatar' %>
        <div class="expense-info">
          <h3> <%= expense.category %> </h3>
          <p> <%= expense.created_at %> </p>
        </div>
        <div class="card-price">
          <h3 id="expense-card-bold"> <%= expense.amount %> </h3>
          <p> <%= expense.amount / expense.users.count %> </p>
        </div>
      </div>
    <% end %>
  </div>


</div>
<div class="fixed-btn">
  <%= link_to 'Create an expense', 'new_flat_expense_path', class:'primarybtn btn-fixed' %>
</div>
